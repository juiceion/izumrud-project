{{#> modules/layout/default/index }}
  <section class="page page-vacancy-form">
      <div class="page-shares__breadcrumb">
          <a href="/">Главная</a>
          {{> modules/common/svg-icon/index src="icons/min-arrow.svg" }}
          <a href="">Вакансии</a>
          {{> modules/common/svg-icon/index src="icons/min-arrow.svg" }}
          <a href="">Оставить резюме</a>
      </div>
      <div class="resume-form">
          <form id="resumeForm" novalidate>
              <div class="box__row">
                  <div class="box__col">
                      <h1 class="form-title">Оставить резюме</h1>
                      <p class="form-subtitle">Расскажите нам о себе и мы обязательно с вами свяжемся</p>
                  </div>
              </div>

              <div class="box__row form-space">
                  <div class="box__col box__col_xs_12 box__col_md_4">
                      <div class="personal-data">
                          <h2 class="section-title">Личные данные</h2>

                          <div class="form-group">
                              <label for="firstName">Имя</label>
                              <input type="text" id="firstName" class="form-control" placeholder="Иванов Иван Иванович" required>
                              <div class="error-message">Пожалуйста, введите имя</div>
                          </div>

                          <div class="form-group">
                              <label for="lastName">Фамилия</label>
                              <input type="text" id="lastName" class="form-control" placeholder="Управляющий" required>
                              <div class="error-message">Пожалуйста, введите фамилию</div>
                          </div>

                          <div class="form-group">
                              <label for="email">E-mail</label>
                              <input type="email" id="email" class="form-control" placeholder="mail@example.com" required>
                              <div class="error-message">Пожалуйста, введите корректный email</div>
                          </div>

                          <div class="form-group">
                              <label for="phone">Телефон</label>
                              <input type="tel" id="phone" class="form-control" placeholder="+7 (3822) 281-381" required>
                              <div class="error-message">Пожалуйста, введите корректный номер телефона</div>
                          </div>
                      </div>
                  </div>
                  <div class="box__col box__col_xs_12 box__col_md_8">
                      <div class="resume-upload">
                          <h2 class="section-title">Резюме</h2>

                          <div class="file-upload" id="dropZone">
                              <input type="file" id="fileInput" hidden accept=".jpg,.jpeg,.png,.pdf">
                              <p>Выберите на компьютере или перетащите файл сюда</p>
                              <p>(не более 10 МБ)</p>
                              <p>Допустимые форматы: jpg, jpeg, png, pdf</p>
                          </div>
                          <div class="error-message" id="fileError"></div>

                          <div class="resume-link">
                              <input type="text" class="form-control" id="resumeLink"
                                     placeholder="Или вставьте ссылку на резюме hh.ru или Superjob.ru">
                          </div>
                      </div>
                  </div>
              </div>
              <div class="box__row">
                  <div class="box__col">
                      <div class="checkbox-group">
                          <input type="checkbox" id="consent" required>
                          <label for="consent">
                              Я даю согласие на <a href="#">обработку персональных данных</a>
                          </label>
                      </div>
                      <div class="error-message" id="consentError">Необходимо дать согласие на обработку персональных данных</div>

                      <button type="submit" class="submit-button">Оставить резюме</button>
                  </div>
              </div>
          </form>
      </div>
  </section>
{{/ modules/layout/default/index }}
